rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /projects/{projectId} {
      allow read: if true;
      allow create: if isSignedIn() && ownsNewDocument();
      allow update, delete: if isSignedIn() && ownsDocument();
    }

    match /siteContent/{docId} {
      allow read: if true;
      allow create: if isSignedIn() && ownsNewDocument();
      allow update, delete: if isSignedIn() && ownsDocument();
    }

    match /contactMessages/{messageId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}

function isSignedIn() {
  return request.auth != null;
}

function ownsDocument() {
  return request.auth.uid == resource.data.ownerUid;
}

function ownsNewDocument() {
  return request.auth.uid == request.resource.data.ownerUid;
}
